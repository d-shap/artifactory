#!/bin/bash
if [ ! -d /artifactory/db/mysql ];
then
    mysql_install_db
fi

sed -i 's|\(\s*\)#password: .*|\1password: '"$DB_USER_PASSWORD"'|' $ARTIFACTORY_HOME/var/etc/system.yaml

trap /artifactory/scripts/shutdown SIGHUP SIGINT SIGTERM TERM

startMySQLCmd="mysqld"
startArtifactoryCmd="$ARTIFACTORY_HOME/app/bin/artifactoryctl start"
$startMySQLCmd & $startArtifactoryCmd & wait
